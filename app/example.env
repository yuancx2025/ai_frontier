# Google Gemini API Configuration
GEMINI_API_KEY=

# Email Configuration (AWS SES)
AWS_REGION=us-east-1
SES_FROM_EMAIL=
# Optional: If not set, boto3 will use default credential chain (IAM role, ~/.aws/credentials, etc.)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# YouTube API Configuration
# Get your API key from: https://console.cloud.google.com/apis/credentials
# Enable YouTube Data API v3 in your Google Cloud project
YOUTUBE_API_KEY=

# Environment Configuration
# Set to LOCAL for local development, PRODUCTION for production
# If not set, defaults to LOCAL
ENVIRONMENT=LOCAL

# Database Configuration
# For Cloud Deployment: Use DATABASE_URL provided by your cloud provider
# For Local Development: Use individual POSTGRES_* variables below
DATABASE_URL=

# Local Development Database (only needed if DATABASE_URL is not set)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=ai-frontiers
POSTGRES_HOST=localhost
POSTGRES_PORT=5433

# YouTube Channel Configuration
# Comma-separated list of YouTube channel IDs to scrape
# Example: YOUTUBE_CHANNELS=UCn8ujwUInbJkBhffxqAPBVQ,UCawZsQWqfGSbCI5yjkdVkTA
# If not set, defaults to Dave Ebbelaar and Matthew Berman channels
YOUTUBE_CHANNELS=UCn8ujwUInbJkBhffxqAPBVQ